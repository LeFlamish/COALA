<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/background_image"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/coalaiconn"
            android:alpha="0.3"
            android:layout_marginBottom="30dp"/>

        <!-- ID Input Field -->
        <androidx.cardview.widget.CardView
            android:layout_width="330sp"
            android:layout_height="50sp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/id_icon"
                    android:layout_marginRight="5dp"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/hint_ID"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Password Input Field -->
        <androidx.cardview.widget.CardView
            android:layout_width="330sp"
            android:layout_height="50sp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/password_icon2"
                    android:layout_marginRight="5dp"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/hint_PWD"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_background"
            android:text="로그인"
            android:textSize="20sp"
            android:backgroundTint="@color/gray"
            android:drawableStart="@drawable/login_icon"
            android:drawablePadding="55dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="   회원가입"
                android:backgroundTint="@color/gray"
                android:drawableStart="@drawable/register_icon"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"

                android:gravity="center_vertical"/>


            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_find"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="@string/forget_PWD"
                android:backgroundTint="@color/gray"
                android:drawableStart="@drawable/find_icon"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"

                android:gravity="center_vertical"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_question"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="70dp"
            android:layout_gravity="right"
            android:background="@drawable/questionmark"
            android:backgroundTint="#2A2898"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
